@model IEnumerable<Product>

<div class="row pb-3 momo">
	@foreach(var pro in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						@if(pro.Images != null && pro.Images.Count() > 0)
						{
							<img src="@pro.Images.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
						}
						else
						{
							<img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
						}
						<div class="card-body pb-0">
							<div class="p-lg-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@pro.Title</p>
								<p class="card-title text-warning text-center"> by   <b>@pro.Author</b></p>
							</div>
							<div class="p-lg-1 mb-0">
								<p class="text-dark text-opacity-75 text-center mb-0">
									List Price : 
									<span class="text-decoration-line-through">@pro.ListPrice.ToString("c")</span>
								</p>
							</div>
							<div class="p-lg-1">
								<p class="text-dark text-opacity-75 text-center">As low as : <span>@pro.Price100.ToString("c")</span></p>
							</div>
						</div>
						<div>
							<a asp-action="Details" asp-route-id="@pro.Id" class="btn btn-primary bg-gradient border-0 form-control">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

	}
</div>