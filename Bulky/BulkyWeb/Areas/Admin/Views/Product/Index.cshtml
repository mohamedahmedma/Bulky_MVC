@model List<Product>
<div class="card shadow border-0 mt-4 momo">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">

		<div class="container">
			<div class="row  pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end">
					<a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
						<i class="bi bi-cloud-plus"></i>   Add New Product
					</a>
				</div>
			</div>

			<table id="tblData" class="table table-bordered table-striped" width="100%">
				<thead>
					<tr>
						<th>
							 Title
						</th>
						<th>
							ISBN
						</th>
						<th>
							Category
						</th>
						<th>
							Author
						</th>
						<th>
							Price
						</th>
						<th></th>
					</tr>
				</thead>
			</table>

		</div>

	</div>
</div>

@section Scripts{
	<script src="/js/product.js"></script>
}

